<Window x:Class="UDPClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UDP Chat" Height="450" Width="800">
    <Grid>
        <TextBox Name="ChatBox" VerticalAlignment="Top" Margin="10,69,10,0" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        <TextBox Name="MessageTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,10,90,10"/>
        <Button Name="SendButton" Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="75" Height="30" Click="SendButton_Click"/>
        <Button Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="75" Height="30" Click="ConnectButton_Click"/>
        <Button Name="ExitButton" Content="Exit" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Width="75" Height="30" Click="ExitButton_Click"/>
        <TextBox Name="NameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="118,10,0,0" Width="200" Height="30"/>
    </Grid>
</Window>
